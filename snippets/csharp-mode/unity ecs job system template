[DisableAutoCreation]
public class ${1:`(file-name-base (buffer-file-name))`} : JobComponentSystem {

    public $1() {
        
    }

    [BurstCompile]
    struct $1Job
        : IJobForEach<${2:T}> {
        public float DeltaTime;

        public void Execute([ReadOnly] ref $2 ${3:t}) {
            $0
        }
    }

    // OnUpdate runs on the main thread.
